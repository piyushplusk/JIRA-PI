<label for="dropdown3">Soarian Scheduling:</label>

 

    <select id="dropdown3" onchange="redirectToURL(this)">

 

        <option disabled="" selected="">Select an option</option>

 

        <option value="https://www.example.com/link2">MS Patching</option>

        <option value="https://www.example.com/link3">Upgrade</option>
        <option value="https://www.example.com/link3">History table migration </option>
    </select>
    <script>
        function redirectToURL(selectElement) {
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const url = selectedOption.value;

            if (url) {


                window.open(url, '_blank'); // Open the link in a new tab or window

            }


        }
    </script>
